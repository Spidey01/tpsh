                 'fg'           => sub { warn "Not implemented\n" },
                 'getopts'      => sub { warn "Not implemented\n" },
                 'hash'         => \&hash_bin,
                 'jobs'         => sub { warn "Not implemented\n" },
                 'local'        => sub { warn "Not implemented\n" },
                 'read'         => \&read_bin,
                 'readonly'     => sub { warn "Not implemented\n" },
                 'rehash'       => \&rehash_bin,
                 'return'       => sub { warn "Not implemented\n" }, 
