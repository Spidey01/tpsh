#
# Represents command line flags and set -options
#
my %Options = ( 
    allexport       =>  0,
    notify          =>  0,
    noclobber       =>  0,
    emacs           =>  1,
    errexit         =>  0,
    noglob          =>  0,
    ignoreeof       =>  0,
    interactive     =>  0, 
